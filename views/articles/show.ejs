<%- include ('../partials/header.ejs')  %> 

    <div class="show-img"><img src='data:<%= article.contentType %>;base64,<%= article.imageBase64 %>' alt=""></div>
   <div class="show-container">

    <div class="btn-toolbar justify-content-between my-2" role="toolbar" aria-label="Toolbar with button groups">
        <div class="btn-group" role="group" aria-label="First group">
            <a href="/articles" class="btn btn-outline-dark">All articles</a>
        </div>
            <div class="form-group">
                <% if (user) { %>
                    <a href="/articles/edit/<%= article.id %>" class="btn btn-outline-dark">Edit</a>
                   <% } %>
            </div>
      </div>


       
      
       <h1 class="my-4" style="text-transform:uppercase;text-align: center;"><%= article.title %> </h1>
    <p style="font-size: 14px;" class="text-muted"><%= article.createdAt.toDateString() %> </p> 
    <p class="my-4 px-3"><%= article.description %> </p> 
   
    <div>
        
        <div class="my-4"><%- article.markdown %> </div>
   </div>
</div>
   
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>