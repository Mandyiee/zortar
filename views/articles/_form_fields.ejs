<div class="formCon">
    <div class="formCons">
        <label for="title" class="form-label">Title</label>
        <input type="text" required class="form-control" value="<%= article.title %>" name="title" id="title">
    </div>
    <div class="formCons">
        <label for="description" class="form-label">Description</label>
        <textarea name="description" class="form-control" style="resize: none;" rows="3" required
            id="description"><%= article.description %></textarea>
    </div>
    <div class="formCons">
        <label for="image" class="form-label"></label>
        <input type="file" name="image" class="form-control" id="image" value="<%= article.filename %>" required>
    </div>
    <div class="formCons">
        <label for="markdown" class="form-label">Markdown</label>
        <textarea id="my-expressjs-tinymce-app" required name='markdown'><%= article.markdown %></textarea>
    </div>
    <div class="btn-toolbar justify-content-between my-2" role="toolbar" aria-label="Toolbar with button groups">
        <div class="btn-group" role="group" aria-label="First group">
            <a href="/articles" class="btn btn-outline-dark">Cancel</a>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-outline-dark">Save</button>
        </div>
    </div>
</div>