<%- include ('../partials/header.ejs')  %> 
   <div class="container">
       <% if (user) { %>
        <a href="/articles/new" class="btn btn-outline-dark my-4">new</a>
       <% } %>
       <div class="container mb-3">
           <% articles.forEach(article => { %>
              <div class="card mb-4">
                <img src='data:<%= article.contentType %>;base64,<%= article.imageBase64 %>' style="height: 250px;object-fit: cover;" class="card-img-top img-fluid" alt="...">
                <div class="card-body">
                  <h5 class="card-title"><%= article.title %></h5>
                  <p class="card-text"><%= article.description %></p>
                  <p class="card-text"><small class="text-muted">Last updated <%= article.createdAt.toDateString() %></small></p>
                  <div class="btn-toolbar justify-content-between my-2" role="toolbar" aria-label="Toolbar with button groups">
                    <div class="btn-group" role="group" aria-label="First group">
                        <a href="/articles/<%= article.slug %>" class="btn btn-outline-dark">Read More</a>
                    </div>
                    <% if (user) { %>
                        <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="form-group">
                            <button type="submit" class="btn btn-outline-dark">Delete</button>
                            </form>
                    <% } %>
                  </div>
                </div>
              </div>
          <% }) %>
       </div>
   </div>
   <%- include ('../partials/footer.ejs')  %>
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  
   